
# generic docker aliases to save fingers
alias da="docker ps -a"
alias diz="di | fzfr --header-lines=1 | afs -o 1,2 | sed -e 's/ \+/:/'"
alias dp="docker pull"
alias dr="docker run -it "
alias drd="docker run -d "
alias drv="docker run -v /tmp/.X11-unix:/tmp/.X11-unix -e 'DISPLAY=:0' --device /dev/dri/card0 "

